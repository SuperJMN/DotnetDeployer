    <ProjectReference Include="../../../DotnetPackaging/src/DotnetPackaging.Msix/DotnetPackaging.Msix.csproj" />
    <ProjectReference Include="../../../DotnetPackaging/src/DotnetPackaging.Dmg/DotnetPackaging.Dmg.csproj" />
    <ProjectReference Include="../../../DotnetPackaging/src/DotnetPackaging.Exe/DotnetPackaging.Exe.csproj" />
  </ItemGroup>
  <ItemGroup>
