<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackAsTool>true</PackAsTool>
    <RollForward>LatestMajor</RollForward>
    <ToolCommandName>dotnetdeployer</ToolCommandName>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Serilog.Sinks.Console" />
    <PackageReference Include="System.CommandLine" />
    <PackageReference Include="DotnetPackaging.AppImage" />
    <PackageReference Include="DotnetPackaging.Flatpak" />
    <PackageReference Include="DotnetPackaging.Rpm" />
    <PackageReference Include="DotnetPackaging.Deb" />
    <PackageReference Include="DotnetPackaging.Msix" />
    <PackageReference Include="DotnetPackaging.Dmg" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\DotnetDeployer\DotnetDeployer.csproj" />
  </ItemGroup>
</Project>